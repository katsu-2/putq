.around
  .posts--show
    .posts--show__user
      %p.posts--show__user__avatar
        = image_tag('user.png', class: "user-pic", alt: "ユーザーイメージ")
      .posts--show__user__name
        %p
          = @user.name
    = render partial: 'show', locals: { post: @post }
    .posts--show__btn
    - if user_signed_in? && current_user.id == @post.user_id
      .posts--show__btn__b
        = link_to '編集', edit_post_path(@post), class: "edit-btn btn_b"
        = link_to '削除', post_path(@post), class: "delete-btn btn_b", method: :delete, data: { confirm: "削除してもいいですか？"}
    .posts--show__like
      = render 'likes/like'
  = render 'comments/comment'
  = render 'comments/form'
